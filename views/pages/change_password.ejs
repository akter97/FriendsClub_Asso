 <style>
  /* Base reset and design setup from your code */
  * {
    margin: 0; padding: 0; box-sizing: border-box;
    font-family: 'Poppins', sans-serif;
  }

  body {
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    min-height: 100vh;
    display: flex;
    justify-content: center;
    align-items: center;
    padding: 20px;
  }

  .main-content {
    width: 100%;
    display: flex;
    justify-content: center;
    align-items: center;
  }

  .login-container {
    background: rgba(255, 255, 255, 0.15);
    backdrop-filter: blur(15px);
    -webkit-backdrop-filter: blur(15px);
    border: 1px solid rgba(255, 255, 255, 0.2);
    padding: 40px;
    border-radius: 20px;
    width: 100%;
    max-width: 420px;
    box-shadow: 0 25px 50px rgba(0, 0, 0, 0.2);
    text-align: center;
  }

  .login-container h2 {
    color: #fff;
    margin-bottom: 30px;
    font-size: 26px;
    font-weight: 600;
  }

  .login-container input {
    width: 100%;
    padding: 12px 15px;
    margin-bottom: 5px; /* Error text-er jonno ektu komano hoyeche */
    background: rgba(255, 255, 255, 0.2);
    border: 2px solid rgba(255, 255, 255, 0.1); /* Default border thicker kora hoyeche */
    border-radius: 10px;
    color: #fff;
    outline: none;
    font-size: 16px;
    transition: 0.3s;
  }

  /* Red Border Logic */
  .login-container input.invalid-input {
    border-color: #ff4d4d !important;
    background: rgba(255, 0, 0, 0.1);
  }

  /* Success Border Logic */
  .login-container input.valid-input {
    border-color: #00ff88 !important;
  }

  .login-container input::placeholder {
    color: rgba(255, 255, 255, 0.7);
  }

  .password-box {
    position: relative;
    width: 100%;
    margin-bottom: 15px;
    text-align: left;
  }

  .password-box span {
    position: absolute;
    right: 15px;
    top: 10px;
    cursor: pointer;
    font-size: 20px;
    color: #fff;
    z-index: 10;
  }

  .validation-text {
    font-size: 11px;
    color: #ffcccc;
    margin-bottom: 10px;
    display: none; /* Default hidden */
    padding-left: 5px;
  }

  .login-container button {
    width: 100%;
    padding: 12px;
    background: #fff;
    color: #764ba2;
    border: none;
    border-radius: 10px;
    font-size: 18px;
    font-weight: bold;
    cursor: pointer;
    margin-top: 10px;
    transition: 0.3s;
  }

  .login-container button:hover:not(:disabled) {
    background: #667eea;
    color: #fff;
  }

  .login-container button:disabled {
    background: rgba(255, 255, 255, 0.3);
    color: rgba(255, 255, 255, 0.5);
    cursor: not-allowed;
  }

  .error { background: rgba(255, 0, 0, 0.25); color: #ffe6e6; padding: 10px; border-radius: 8px; margin-bottom: 15px; font-size: 14px; }
  .success { background: rgba(0, 255, 0, 0.25); color: #eaffea; padding: 10px; border-radius: 8px; margin-bottom: 15px; font-size: 14px; }
  .footer { margin-top: 25px; color: rgba(255, 255, 255, 0.7); font-size: 12px; }
</style>

<div class="main-content">
  <div class="login-container">
    <h2>üîê Change Password</h2> 
    <form method="POST" action="/change-password" id="cpForm">

      <div class="password-box">
        <input type="password" id="oldPassword" name="old_password" placeholder="Old Password" required />
        <span onclick="togglePassword('oldPassword', this)">üëÅÔ∏è</span>
      </div>

      <div class="password-box">
        <input type="password" id="newPassword" name="new_password" placeholder="New Password (min 6 char)" required />
        <span onclick="togglePassword('newPassword', this)">üëÅÔ∏è</span>
        <div id="lenError" class="validation-text">‚ö†Ô∏è Minimum 6 characters required</div>
      </div>

      <div class="password-box">
        <input type="password" id="confirmPassword" name="confirm_password" placeholder="Confirm New Password" required />
        <span onclick="togglePassword('confirmPassword', this)">üëÅÔ∏è</span>
        <div id="matchError" class="validation-text">‚ùå Passwords do not match</div>
      </div>

      <button type="submit" id="submitBtn">Update Password</button>
    </form>

    <p class="footer">¬© 2024 FriendsClub - Secure Account</p>
  </div>
</div>

<script>
  function togglePassword(id, icon) {
    const input = document.getElementById(id);
    if (input.type === "password") {
      input.type = "text";
      icon.innerText = "üôà";
    } else {
      input.type = "password";
      icon.innerText = "üëÅÔ∏è";
    }
  }

  const form = document.getElementById('cpForm');
  const newPass = document.getElementById('newPassword');
  const confirmPass = document.getElementById('confirmPassword');
  const submitBtn = document.getElementById('submitBtn');
  const lenError = document.getElementById('lenError');
  const matchError = document.getElementById('matchError');

  function validateRealTime() {
    const nVal = newPass.value;
    const cVal = confirmPass.value;

    // 1. Minimum 6 character check
    if (nVal.length > 0 && nVal.length < 6) {
      newPass.classList.add('invalid-input');
      newPass.classList.remove('valid-input');
      lenError.style.display = 'block';
    } else if (nVal.length >= 6) {
      newPass.classList.remove('invalid-input');
      newPass.classList.add('valid-input');
      lenError.style.display = 'none';
    } else {
      newPass.classList.remove('invalid-input', 'valid-input');
      lenError.style.display = 'none';
    }

    // 2. Matching check
    if (cVal.length > 0) {
      if (nVal !== cVal) {
        confirmPass.classList.add('invalid-input');
        confirmPass.classList.remove('valid-input');
        matchError.style.display = 'block';
      } else {
        confirmPass.classList.remove('invalid-input');
        confirmPass.classList.add('valid-input');
        matchError.style.display = 'none';
      }
    } else {
      confirmPass.classList.remove('invalid-input', 'valid-input');
      matchError.style.display = 'none';
    }

    // 3. Button Status
    if (nVal.length >= 6 && nVal === cVal) {
      submitBtn.disabled = false;
    } else {
      submitBtn.disabled = true;
    }
  }

  newPass.addEventListener('input', validateRealTime);
  confirmPass.addEventListener('input', validateRealTime);

  // Initial call to set button state
  validateRealTime();
</script>