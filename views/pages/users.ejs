<script>
 const steps = [
  'roleId','name','email','password','confirmPassword','MemberCode',
  'FathersName','MothersName','MobileNo','PassportNo','Organization','Picture','PresentAddress'
];

const form = document.getElementById('registrationForm');
const submitBtn = document.getElementById('submitBtn');

const requiredFields = ['roleId','name','email','password','confirmPassword','MemberCode'];

const passwordInput = document.getElementById('password');
const confirmPasswordInput = document.getElementById('confirmPassword');

// Hide submit by default
submitBtn.style.display = 'none';

// Check if all required fields are filled AND password matches
function checkSubmitVisibility() {
  let allFilled = true;

  requiredFields.forEach(id => {
    const el = document.getElementById(id);
    if (!el) return;
    if (el.value.trim() === "") allFilled = false;
  });

  if (allFilled && passwordInput.value === confirmPasswordInput.value) {
    submitBtn.style.display = 'inline-block';
  } else {
    submitBtn.style.display = 'none';
  }
}

// Confirm Password live validation
confirmPasswordInput.addEventListener('input', () => {
  if (passwordInput.value === confirmPasswordInput.value) {
    confirmPasswordInput.style.borderColor = "green";
  } else {
    confirmPasswordInput.style.borderColor = "red";
  }
  checkSubmitVisibility();
});

// Multi-step logic
steps.forEach((id, index) => {
  const el = document.getElementById(id);
  if (!el) return;

  const eventType = el.tagName === 'SELECT' || el.type === 'file' ? 'change' : 'input';
  el.addEventListener(eventType, () => {
    if (el.value.trim() !== "") {
      const nextId = steps[index + 1];
      if (nextId) document.getElementById(nextId).parentElement.style.display = 'block';
    }
    checkSubmitVisibility(); // Check submit button after every change
  });
});

// Form submit validation
form.addEventListener('submit', function (e) {
  // Final check
  if (passwordInput.value !== confirmPasswordInput.value) {
    e.preventDefault();
    alert("‚ùå Password and Confirm Password do not match!");
    confirmPasswordInput.focus();
    confirmPasswordInput.style.borderColor = "red";
    return;
  }

  for (let id of requiredFields) {
    const el = document.getElementById(id);
    if (!el) continue;
    if (el.value.trim() === "") {
      e.preventDefault();
      alert(`‚ùå Please fill the required field: ${id}`);
      el.focus();
      return;
    }
  }
});

// Prefill on Edit click
document.querySelectorAll('.btn-edit').forEach(btn => {
  btn.addEventListener('click', e => {
    e.preventDefault();

    steps.forEach(field => {
      const input = document.getElementById(field);
      if (!input) return;

      const value = btn.dataset[field.toLowerCase()] || '';

      if (input.type === 'file') input.value = '';
      else input.value = value;

      // Show all fields
      input.parentElement.style.display = 'block';
    });

    submitBtn.style.display = 'inline-block';
    form.scrollIntoView({ behavior: 'smooth' });
  });
});

</script>
