<script>
 const steps = [
    'roleId', 'name', 'email', 'password', 'confirmPassword', 'MemberCode',
    'FathersName', 'MothersName', 'MobileNo', 'PassportNo', 'Organization', 'Picture', 'PresentAddress'
];

const form = document.getElementById('registrationForm');
const submitBtn = document.getElementById('submitBtn');
const updateBtn = document.getElementById('updateBtn');
const userIdInput = document.getElementById('userId');
const passwordInput = document.getElementById('password');
const confirmPasswordInput = document.getElementById('confirmPassword');
const requiredFields = ['roleId', 'name', 'email', 'password', 'confirmPassword', 'MemberCode'];

// --- Helper: Check Form Validity ---
function validateForm() {
    const isEdit = userIdInput.value !== "";
    let allRequiredFilled = true;
 
    const fieldsToVerify = isEdit ? ['roleId', 'name', 'email', 'MemberCode'] : requiredFields;

    fieldsToVerify.forEach(id => {
        const el = document.getElementById(id);
        if (el && el.value.trim() === "") allRequiredFilled = false;
    });
 
    const passwordsMatch = passwordInput.value === confirmPasswordInput.value;

    if (allRequiredFilled && passwordsMatch) {
        if (isEdit) {
            updateBtn.style.display = 'inline-block';
            submitBtn.style.display = 'none';
        } else {
            submitBtn.style.display = 'inline-block';
            updateBtn.style.display = 'none';
        }
    } else {
        submitBtn.style.display = 'none';
        updateBtn.style.display = 'none';
    }
}

// 
steps.forEach((id, index) => {
    const el = document.getElementById(id);
    if (!el) return;

    const eventType = el.tagName === 'SELECT' || el.type === 'file' ? 'change' : 'input';
    el.addEventListener(eventType, () => { 
        if (!userIdInput.value && el.value.trim() !== "") {
            const nextId = steps[index + 1];
            if (nextId) document.getElementById(nextId).parentElement.style.display = 'block';
        } 
        if (id === 'confirmPassword' || id === 'password') {
            confirmPasswordInput.style.borderColor = (passwordInput.value === confirmPasswordInput.value) ? 'green' : 'red';
        }
        
        validateForm();
    });
});

// --- Edit Mode Logic ---
document.querySelectorAll('.btn-edit').forEach(btn => {
    btn.addEventListener('click', e => {
        e.preventDefault();

        // ‡ßß. ‡¶∏‡¶¨ ‡¶´‡¶ø‡¶≤‡ßç‡¶° ‡¶∂‡ßã ‡¶ï‡¶∞‡¶æ
        document.querySelectorAll('.form-step').forEach(s => s.style.display = 'block');

        // ‡ß®. ‡¶°‡¶æ‡¶ü‡¶æ ‡¶™‡¶™‡ßÅ‡¶≤‡ßá‡¶ü ‡¶ï‡¶∞‡¶æ
        userIdInput.value = btn.dataset.id;
        document.getElementById('roleId').value = btn.dataset.roleid || '';
        document.getElementById('name').value = btn.dataset.name || '';
        document.getElementById('email').value = btn.dataset.email || '';
        document.getElementById('MemberCode').value = btn.dataset.membercode || '';
        document.getElementById('FathersName').value = btn.dataset.fathersname || '';
        document.getElementById('MothersName').value = btn.dataset.mothersname || '';
        document.getElementById('MobileNo').value = btn.dataset.mobileno || '';
        document.getElementById('PassportNo').value = btn.dataset.passportno || '';
        document.getElementById('Organization').value = btn.dataset.organization || '';
        document.getElementById('PresentAddress').value = btn.dataset.presentaddress || '';

        // ‡¶™‡¶æ‡¶∏‡¶ì‡ßü‡¶æ‡¶∞‡ßç‡¶° ‡¶´‡¶ø‡¶≤‡ßç‡¶° ‡¶ï‡ßç‡¶≤‡¶ø‡ßü‡¶æ‡¶∞ (‡¶è‡¶°‡¶ø‡¶ü ‡¶Æ‡ßã‡¶°‡ßá ‡¶Ö‡¶™‡¶∂‡¶®‡¶æ‡¶≤)
        passwordInput.value = '';
        confirmPasswordInput.value = '';
        confirmPasswordInput.style.borderColor = '#ddd';

        // ‡ß©. ‡¶á‡¶Æ‡ßá‡¶ú ‡¶™‡ßç‡¶∞‡¶ø‡¶≠‡¶ø‡¶â
        const preview = document.getElementById('previewImage');
        const oldPicInput = document.getElementById('OldPicture');
        if (btn.dataset.picture) {
            preview.src = `/Image/ProfilePicture/${btn.dataset.picture}`;
            preview.style.display = 'block';
            oldPicInput.value = btn.dataset.picture;
        } else {
            preview.style.display = 'none';
        }

        // ‡ß™. ‡¶¨‡¶æ‡¶ü‡¶® ‡¶∏‡ßÅ‡¶á‡¶ö
        validateForm();
        form.scrollIntoView({ behavior: 'smooth' });
    });
});

// --- Update API Call ---
updateBtn.addEventListener('click', (e) => {
    e.preventDefault();
    
    if (passwordInput.value !== confirmPasswordInput.value) {
        alert('‚ùå Passwords do not match');
        return;
    }

    const formData = new FormData(form);
    fetch('/users/update', {
        method: 'POST',
        body: formData
    })
    .then(r => r.json())
    .then(d => {
        if (d.success) {
            alert('‚úÖ Updated successfully');
            location.reload();
        } else {
            alert('‚ùå Update failed: ' + (d.message || 'Unknown error'));
        }
    })
    .catch(err => alert('‚ùå Error: ' + err));
});

</script>
